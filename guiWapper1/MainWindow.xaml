<Window x:Class="guiWapper1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:guiWapper1"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="80" ></RowDefinition>
            <RowDefinition MaxHeight="30"></RowDefinition>
            <RowDefinition MaxHeight="30"></RowDefinition>
            <RowDefinition MaxHeight="30"></RowDefinition>
            <RowDefinition MaxHeight="30"></RowDefinition>
            <RowDefinition MaxHeight="30"></RowDefinition>
            <RowDefinition MaxHeight="20"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>

        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Background="LightBlue"
                    >
            <Image  Source="icons\Git slime icon.png"
                    Height="55"
                    Margin="5"/>
            <TextBlock HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="25"
                       FontFamily="Papyrus"
                    Text="Git Slime"
                    />
            


        </StackPanel>
        <CheckBox x:Name="darkmode"
                  Grid.Column="2"
                      Content="DarkMode"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                    Margin="0 0 20 0"
                    IsChecked="False" 
                  Checked="darkModeActivated"
                  Unchecked="darkModeActivated"/>

        <TextBlock x:Name="locationTitle" 
                   Grid.Row="1"
                   Grid.Column="0"
                   FontSize="15"
                   FontWeight="DemiBold"
                   Margin="5 0 5 0"
                   VerticalAlignment="Center" Text="Repository Location"/>
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2"
                    TextWrapping="Wrap"
                    Text="{Binding RepoLocation}"></TextBox>

        <Button     Grid.Row="2"
                    Content="Initialize Repository"
                    Command="{Binding onClickInit}"/>

        <!--<TextBox    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2"
                    TextWrapping="Wrap"
                    Text="{Binding Init}">enter something</TextBox>-->

        <Button     Grid.Row="3"
                    Content="Add Items"
                    Command="{Binding onClickAdd}"/>

        <TextBox    Grid.Column="1"
                    Grid.Row="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="center"
                    Grid.ColumnSpan="2"
                    Text="{Binding AddMessage}"/>

        <Button     Grid.Row="4"
                    Content="Commit Repo (git commit -m)"
                    Command="{Binding onClickCommit}"/>

        <TextBox    Grid.Column="1" Grid.Row="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="center"
                    Grid.ColumnSpan="2"
                    Text="{Binding CommitMessage}"/>
        <!--<Button Grid.Row="4">Pull Repo</Button>
        <TextBox Grid.Column="1" Grid.Row="4"
                   HorizontalAlignment="Center"
                   VerticalAlignment="center"
                 Grid.ColumnSpan="2">enter something</TextBox>-->

        <Button     Grid.Row="5"
                    Grid.Column="0"
                    Command="{Binding onClickStatus}"
                    Content="Status"></Button>
        <Button     Grid.Row="5"
                    Margin="10 0 10 0"
                    Grid.Column="1"
                    MinWidth="150"
                    MaxWidth="200" 
                    Command="{Binding onClickLog}"
                    Content="Log"/>
        <TextBlock
                    Grid.Row="6"
                    Grid.ColumnSpan="3"
                    Text="Output"
                    FontWeight="Bold"
                    FontStyle="Italic"
                    FontSize="15"
                    Background="Orange"/>
        
            <ScrollViewer   Grid.Row="7"
                        Grid.ColumnSpan="3"
                        >

            <TextBlock  x:Name="OutputBlock"
                        MinHeight="200"
                        Text="{Binding Output}"
                        Background="Black"
                        Foreground="White">
            </TextBlock>
        </ScrollViewer>
    </Grid>

</Window>
